using System;
class MyTime
{
 public static void Main()
  {
	double x,         
	       y;
	string str;       // Рабочая строка для ввода и вывода данных 
	
	Console.Write("Введите значение переменной x: ");
    str = Console.ReadLine();        
	x = double.Parse(str); 
     if (x<=-0.5)  y =0.5;
     if (-0.5<x&&x<=0) y=x+1;
     if (0<x&&x<=1) y=x*x-1;
     if (x>1) y=x-1;
    str = y.ToString();               
	str = "y" + str;          
	Console.WriteLine(str);           
    Console.ReadLine();               
  } 
} 
