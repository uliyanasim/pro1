using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace ConsoleApplication2
{
    class Program
    {
        static void Main(string[] args)
        {
          
            double x = 0.1;
            double f = 5.1;
         
            while (x < 1.0)
            {
                f = x + 5;
                Console.WriteLine("f="+f);
                Console.WriteLine("x="+x);
                x = x + 0.2;
            }

            Console.ReadLine();
        }
    }
}
